{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug SentinelPurge",
      "cargo": {
        "args": [
          "build",
          "--bin=sentinel-purge"
        ],
        "filter": {
          "name": "sentinel-purge",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {
        "RUST_LOG": "debug",
        "RUST_BACKTRACE": "1"
      },
      "console": "integratedTerminal",
      "sourceLanguages": ["rust"]
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug SentinelPurge Tests",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--lib"
        ]
      },
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {
        "RUST_LOG": "debug",
        "RUST_BACKTRACE": "1"
      },
      "console": "integratedTerminal",
      "sourceLanguages": ["rust"]
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug Scanner Module",
      "cargo": {
        "args": [
          "build",
          "--package=sentinel-scanner"
        ]
      },
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {
        "RUST_LOG": "debug",
        "SENTINEL_DEBUG": "1"
      },
      "console": "integratedTerminal"
    }
  ]
}